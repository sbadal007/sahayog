rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures: Authenticated users can read all profile pictures
    // but can only write to their own profile picture
    match /profile_pictures/{userFile} {
      allow read: if true; // Allow public read access for profile pictures
      allow write: if request.auth != null && 
                      (userFile == request.auth.uid + '.jpg' || 
                       userFile.matches(request.auth.uid + '\\.[a-zA-Z]+'));
    }
    
    // Fallback rule: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
